<% provide(:title, 'All microposts') %>

    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

<h1>All microposts</h1>

<ul class="microposts">
  <% @microposts.each do |micropost| %>
    <%= render @microposts %>
  <% end %>
</ul>

